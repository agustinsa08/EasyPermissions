@page "/permissions/details/{permissionId:int}"

@if (permission is not null)
{
    <i class="bi bi-arrow-left mb-5 cursor-pointer" @onclick=@(() =>ReturnPermissions()) style="margin: 0px !important; cursor:pointer;"></i>
    <div class="card w-100">
        <div class="card-header">
            <span>
                <i class="bi bi-person-lines" /> Detalles del permiso #@permissionId
            </span>
        </div>

        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="border d-flex justify-content-center align-items-center h-100" style="gap: 5px">
                        
                        <div style="padding: 10px;">
                            <div>
                                <h6 class="fw-bolder">Colaborador</h6>
                                <p class="fw-lighter">
                                    @permission.User!.FullName
                                </p>
                            </div>
                            
                        </div>
                        <div class="d-flex justify-content-center align-items-center flex-1">
                        @if (!string.IsNullOrEmpty(photoUser))
                        {
                                <img src="@photoUser" width="180" height="180" style="border-radius:50%; box-shadow: 10px 5px 10px #0000005c;" />
                            } else
                            {
                                <img src="assets/user/user-default.jpg" width="180" height="180" style="border-radius:50%; box-shadow: 10px 5px 10px #0000005c;" />
                            }

                        </div>
                    </div>
                    
                </div>
                <div class="col-md-6">
                    <div class="border h-100" style="padding: 10px;">

                            <div class="row mt-2">
                                <h6 class="fw-bolder">Descripción</h6>
                                <p class="fw-lighter">
                                    @permission.Description
                                </p>
                            </div>

                            <div class="row mt-2">

                                <h6 class="fw-bolder">Fecha de solicitud</h6>
                                <p class="fw-lighter">
                                @ApplyUtc(permission.Date)
                                </p>
                            </div>
                            <div class="row mt-2">
                                <h6 class="fw-bolder">Estado Actual</h6>
                                <AuthorizeView Roles="User">
                                    <Authorized>
                                        <p class="fw-lighter">
                                        @GetDescription(permission.Status)
                                        </p>
                                    </Authorized>
                                </AuthorizeView>
                                <AuthorizeView Roles="Admin, Leader">
                                    <Authorized>

                                    @if (permission.UserId == userId)
                                    {
                                        <p class="fw-lighter">
                                            @GetDescription(permission.Status)
                                        </p>
                                    } else
                                    {
                                        <div class="row">
                                            <div class="col-md-4">
                                                <select class="form-select" value="@permission.Status.GetHashCode()" @onchange="StatusChangedAsync">
                                                    <option disabled value="-1">-- Seleccione un nuevo estado --</option>
                                                    @if (permissionStatus is not null)
                                                    {
                                                        @for (var i = 0; i < permissionStatus.Count; i++)
                                                        {
                                                            @if (i >= permission.Status.GetHashCode())
                                                            {
                                                                <option value="@i">@GetDescription(permissionStatus[i])</option>
                                                            }
                                                        }
                                                    }
                                                </select>
                                            </div>
                                        </div>
                                    }

                                        
                                    </Authorized>
                                </AuthorizeView>
                            </div>
                    </div>
                </div>
            </div>
            <div class="row mt-5">
                <h3 class="text-center">Historial</h3>
                <div col-md-12>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Estado</th>
                                <th>Fecha de actualización</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var permissionDetail in permissionDetails!)
                            {
                                <tr>
                                    <td>@GetDescription(permissionDetail.Status)</td>
                                    <td>@ApplyUtc(permissionDetail.Date)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
} else
{
    <Loading />
}