<AuthorizeView>
    <Authorized>
        <span class="d-flex align-items-center">
            Hola, <a href="EditUser" class="m-0 nav-link btn btn-link">@context.User.Identity!.Name</a>
        </span>
        @if (!string.IsNullOrEmpty(photoUser))
        {
            <div class="mx-2">
                <img src="@photoUser" width="50" height="50" style="border-radius:50%" />
            </div>
        }
        
        <a href="Logout" class="d-flex nav-link btn btn-link">
            <i class="bi bi-box-arrow-right"></i>
        </a>
    </Authorized>
    <NotAuthorized>
        <a @onclick=@(() => ShowModal()) class="nav-link btn btn-link">Iniciar Sesión</a>
    </NotAuthorized>
</AuthorizeView>